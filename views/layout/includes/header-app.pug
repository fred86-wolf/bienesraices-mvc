header.bg-indigo-600.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/")
            h1.text-2xl.text-white.font-extrabold.text-center Bienes 
                span.font-normal Raices
        
        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white hidden") 
            a(href="/auth/register") Crear Cuenta
            a(href="/auth/login") Iniciar Sesión

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categories/1" class="text-sm font-bold uppercase text-white") Casas
            a(href="/categories/2" class="text-sm font-bold uppercase text-white") Departamentos
            a(href="/categories/3" class="text-sm font-bold uppercase text-white") Bodegas
            a(href="/categories/4" class="text-sm font-bold uppercase text-white") Terrenos
            a(href="/categories/5" class="text-sm font-bold uppercase text-white") Cabañas
        
        form(action="/search" method="POST" class="flex gap-3 items-center")
            input(type="hidden", name="_csrf" value=csrfToken)
            label(for="term" class="text-sm uppercase font-bold text-white") Búsqueda
            input(type="text" id="term" name="term" placeholder="Buscar Propiedades" class="p-2 rounded-lg shadow text-sm")

            input(type="submit" class="bg-indigo-800 hover:bg-indigo-400 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar")