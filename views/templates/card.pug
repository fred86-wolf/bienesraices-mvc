div(class="bg-white shadow rounded-lg")
    img(class="object-cover h-72 w-full" src=`/uploads/${property.image}` alt=`Imagen casa ${property.title}`)
    div(class="p-5 space-y-2")
        h3(class="text-2xl font-bold")= property.title 
        p(class="text-sm txt-gray-600") Habitaciones:  
            span(class="text-gray-800 font-bold")= property.bedrooms
        p(class="text-sm txt-gray-600") WC: 
             span(class="text-gray-800 font-bold")= property.wc 
        p(class="text-sm txt-gray-600") Precio:  
            span(class="text-gray-800 font-bold")= property.price.name
        a(href=`/property/${property.id}` class="bg-indigo-600 w-full text-center block font-bold text-white uppercase rounded") Ver Propiedad
